					"script": {
						"exec": [
							"// Provjera statusnog koda\r",
							"pm.test(\"Status code is 200\", function () {\r",
							"    pm.response.to.have.status(200);\r",
							"});\r",
							"\r",
							"\r",
							"\r",
							"//test 1\r",
							"// Provjera da su svi korisnici stariji od 18 godina\r",
							"const results = pm.response.json().results;\r",
							"\r",
							"for (let i = 0; i < results.length; i++) {\r",
							"    pm.test(`Every user is older than 18`, function () {\r",
							"        pm.expect(results[i].dob.age).to.be.above(18);\r",
							"    });\r",
							"}\r",
							"\r",
							"\r",
							"\r",
							"//test 2\r",
							"// Provjera da svi korisnici imaju slike profila\r",
							"for (let i = 0; i < results.length; i++) {\r",
							"    pm.test(`Every user has a profile picture`, function () {\r",
							"        pm.expect(results[i].picture).to.have.property('thumbnail');\r",
							"        pm.expect(results[i].picture).to.have.property('medium');\r",
							"        pm.expect(results[i].picture).to.have.property('large');\r",
							"    });\r",
							"}\r",
							"\r",
							"\r",
							"\r",
							"//test 3\r",
							"// Provjera da su svi korisnici iz razlicite države\r",
							"const country = results[0].location.country;\r",
							"\r",
							"for (let i = 1; i < results.length; i++) {\r",
							"    pm.test(`Every user is from the different country`, function() {\r",
							"        pm.expect(results[i].location.country).to.not.be.eql;\r",
							"    });\r",
							"}\r",
							"\r",
							"\r",
							"\r",
							"//test 4\r",
							"// Provjera da su sve email adrese različite\r",
							"const emailSet = new Set();\r",
							"\r",
							"for (let i = 0; i < results.length; i++) {\r",
							"    pm.test(`Every user has a unique email address`, function() {\r",
							"        pm.expect(emailSet.has(results[i].email)).to.be.false;\r",
							"        emailSet.add(results[i].email);\r",
							"    });\r",
							"}\r",
							"\r",
							"\r",
							"\r",
							"\r",
							"//test 5\r",
							"// Provjera da svaki korisnik ima broj telefona\r",
							"for (let i = 0; i < results.length; i++) {\r",
							"    pm.test(`Every user has a phone number`, function() {\r",
							"        pm.expect(results[i].phone).to.exist;\r",
							"    });\r",
							"}\r",
							"\r",
							"\r",
							"\r",
							"\r",
							"//test 6\r",
							"//Provjerava da svaki korsnik ima upisan postcode \r",
							"for (let i = 0; i < results.length; i++) {\r",
							"    pm.test(`Every user has a postcode`, function() {\r",
							"        pm.expect(results[i].location.postcode).to.exist;\r",
							"    });\r",
							"}\r",
							"\r",
							"\r",
							"\r",
							"//test 7\r",
							"//Provjerava da li svako ime pocinje velikim slovom\r",
							"\r",
							"for (let i = 0; i < results.length; i++) {\r",
							"    pm.test(`All users name starts with an uppercase letter`, function() {\r",
							"        const firstName = results[i].name.first;\r",
							"\r",
							"        const isFirstLetterUppercase = (str) => {\r",
							"            return str.charAt(0) === str.charAt(0).toUpperCase();\r",
							"        };\r",
							"        pm.expect(isFirstLetterUppercase(firstName)).to.be.true;\r",
							"        \r",
							"    });\r",
							"}\r",
							"\r",
							"\r",
							"\r",
							"\r",
